@model System.Data.DataTable
@{
    ViewData["SubTitle"] = "Usuarios";
    Layout = "_Layout";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <div class="content">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">
                            Usuarios 
                            <a href="@Url.Action("Create", "Users")" class="btn btn-success"><i class="fas fa-plus"></i></a>
                        </h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Permissions")">Aquí</a></li>
                            <li class="breadcrumb-item active">Gestionar roles y permisos</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.content-header -->

        <div class="card">
            @* <div class="card-header">
            <h3 class="card-title">TÍTULO DE CARD</h3>
        </div> *@
            <!-- /.card-header -->
            <div class="card-body">
                <style>
                    .table-small-font td {
                        font-size: 12px;
                    }
                    .table-small-font th {
                        font-size: 12px;
                    }
                </style>
                <table id="UsersTable"
                    class="table table-striped table-bordered table-condensed table-hover table-small-font">
                    <thead>
                        <tr>
                            @* <th>ID</th> *@
                            <th>RUT</th>
                            <th>NOMBRE APELLIDO</th>
                            <th>EMAIL</th>
                            <th>TELÉFONO</th>
                            <th>ROL</th>
                            <th>ESTADO</th>
                            <th>ACCIONES</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (System.Data.DataRow row in Model.Rows)
                        {
                        <tr>
                            @* <td>@row["id"]</td> *@
                            <td>@row["rut"]</td>
                            <td>@row["nombre"] @row["apellidos"]</td>
                            <td>@row["email"]</td>
                            <td>@row["telefono"]</td>
                            <td>@row["rol"]</td>
                            <td>
                                @if (row["estado"].ToString() == "Activo"){
                                    <span class="badge bg-success">@row["estado"]</span>
                                }else{
                                    <span class="badge bg-danger">@row["estado"]</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a href="@Url.Action("Edit", "Users", new { id = row["Id"] })" class="btn btn-info"><i class="fas fa-pen"></i></a>
                                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal-danger" 
                                        onclick="document.getElementById('userId').value = '@row["id"]'">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            @* <th>ID</th> *@
                            <th>RUT</th>
                            <th>NOMBRE APELLIDO</th>
                            <th>EMAIL</th>
                            <th>TELÉFONO</th>
                            <th>ROL</th>
                            <th>ESTADO</th>
                            <th>ACCIONES</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
</div>

<partial name="Partials/Modal-DeleteUser" model="Model"  />

