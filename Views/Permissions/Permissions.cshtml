@model System.Data.DataTable
@{
    ViewData["SubTitle"] = "Roles";
    Layout = "_Layout";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <div class="content">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">
                            Permisos 
                            <a href="@Url.Action("Index", "Permissions")" class="btn btn-secondary"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i></a>
                        </h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Users")">Aquí</a></li>
                            <li class="breadcrumb-item active">Gestionar usuarios</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.content-header -->

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    @foreach (System.Data.DataRow row in ViewBag.Roles.Rows){@row["nombre"]}
                </h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <style>
                    .table-small-font td {
                        font-size: 12px;
                    }
                    .table-small-font th {
                        font-size: 12px;
                    }
                </style>
                <table id="PermissionsTable"
                    class="table table-striped table-bordered table-condensed table-hover table-small-font">
                    <thead>
                        <tr>
                            <th>MÓDULO</th>
                            <th>ACCESO</th>
                            <th>PERMISOS</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (System.Data.DataRow row in ViewBag.Permisos.Rows)
                        {
                            <tr>
                                <td>@row["modulo"]</td>
                                <td>
                                    <div class="form-group">
                                        <div class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                            <input type="checkbox" class="custom-control-input" id="acceso_@row["modulo"]"
                                                @(Convert.ToBoolean(row["acceso"]) ? "checked" : "")>
                                            <label class="custom-control-label" for="acceso_@row["modulo"]"></label>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group d-flex">
                                        <div class="custom-control custom-switch">
                                            <input type="checkbox" class="custom-control-input" id="crear_@row["modulo"]"
                                                @(Convert.ToBoolean(row["crear"]) ? "checked" : "")>
                                            <label class="custom-control-label" for="crear_@row["modulo"]">Crear</label>
                                        </div>
                                        <div class="custom-control custom-switch ml-3">
                                            <input type="checkbox" class="custom-control-input" id="editar_@row["modulo"]"
                                                @(Convert.ToBoolean(row["editar"]) ? "checked" : "")>
                                            <label class="custom-control-label" for="editar_@row["modulo"]">Editar</label>
                                        </div>
                                        <div class="custom-control custom-switch ml-3">
                                            <input type="checkbox" class="custom-control-input" id="eliminar_@row["modulo"]"
                                                @(Convert.ToBoolean(row["eliminar"]) ? "checked" : "")>
                                            <label class="custom-control-label" for="eliminar_@row["modulo"]">Eliminar</label>
                                        </div>
                                        <div class="custom-control custom-switch ml-3">
                                            <input type="checkbox" class="custom-control-input" id="desactivar_@row["modulo"]"
                                                @(Convert.ToBoolean(row["desactivar"]) ? "checked" : "")>
                                            <label class="custom-control-label" for="desactivar_@row["modulo"]">Desactivar</label>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>

                    <tfoot>
                        <tr>
                            <th>MÓDULO</th>
                            <th>ACCESO</th>
                            <th>PERMISOS</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
</div>

<partial name="Partials/Modal-CreateRole" model="Model"  />
<partial name="Partials/Modal-EditRole" model="Model"  />
<partial name="Partials/Modal-DeleteRole" model="Model"  />

