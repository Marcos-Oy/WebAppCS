@model System.Data.DataTable
@{
    ViewData["SubTitle"] = "Roles";
    Layout = "_Layout";
}
@{
    var usuario = AuthService.GetCurrentUser(Context);
    var permisos = AuthService.GetCurrentPermissions(Context);
}
@foreach (System.Data.DataRow row in ViewBag.Roles.Rows)
{
    @if (row["nombre"].ToString() == "root" || permisos["roles-permisos"]["acceso"] == false)
    {
        <script>
            window.location.href = '@Url.Action("Index", "Dashboard")';
        </script>
        <noscript>
            <meta http-equiv="refresh" content="0; url='@Url.Action("Index", "Dashboard")'" />
        </noscript>
    }
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <div class="content">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">
                            Permisos
                            <a href="@Url.Action("Index", "Permissions")" class="btn btn-secondary">
                                <i class="fa fa-chevron-circle-left" aria-hidden="true"></i>
                            </a>
                        </h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Users")">Aquí</a>
                            </li>
                            <li class="breadcrumb-item active">Gestionar usuarios</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.content-header -->

        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    @foreach (System.Data.DataRow row in ViewBag.Roles.Rows)
                    {
                        @row["nombre"]
                    }
                </h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <form asp-action="UpdatePermissions" asp-controller="Permissions" method="post">
                    <style>
                        .table-small-font td {
                            font-size: 12px;
                        }

                        .table-small-font th {
                            font-size: 12px;
                        }

                        .custom-switch-container {
                            display: flex;
                            flex-wrap: wrap;
                            gap: 15px;
                        }

                        .custom-switch-wrapper {
                            display: flex;
                            align-items: center;
                        }

                        .custom-control-label {
                            margin-left: 5px;
                        }
                    </style>
                    <table id="PermissionsTable"
                        class="table table-striped table-bordered table-condensed table-hover table-small-font">
                        <thead>
                            <tr>
                                <th>MÓDULO</th>
                                <th>ACCESO</th>
                                <th>PERMISOS</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (System.Data.DataRow row in ViewBag.Permisos.Rows)
                            {

                                <tr>
                                    <input type="hidden" name="permisos[@row["modulo"]].Id" value="@row["id"]" />
                                    <td>@row["modulo"]</td>
                                    <td>
                                        <div class="form-group">
                                            <div
                                                class="custom-control custom-switch custom-switch-off-danger custom-switch-on-success">
                                                <input type="checkbox" class="custom-control-input"
                                                    id="acceso_@row["modulo"]" name="permisos[@row["modulo"]].Acceso"
                                                    value="true" @(Convert.ToBoolean(row["acceso"]) ? "checked" : "") />
                                                <input type="hidden" name="permisos[@row["modulo"]].Acceso" value="false" />
                                                <label class="custom-control-label" for="acceso_@row["modulo"]">
                                                    @(Convert.ToBoolean(row["acceso"]) ? "Permitido" : "Denegado")
                                                </label>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="form-group custom-switch-container">

                                            @* Crear *@

                                            @if (row["modulo"].ToString() == "usuarios"
                                            || row["modulo"].ToString() == "roles-permisos")
                                            {
                                                <div class="custom-switch-wrapper">
                                                    <div class="custom-control custom-switch">
                                                        <input type="checkbox" class="custom-control-input"
                                                            id="crear_@row["modulo"]" name="permisos[@row["modulo"]].Crear"
                                                            value="true" @(Convert.ToBoolean(row["crear"]) ? "checked" : "") />
                                                        <input type="hidden" name="permisos[@row["modulo"]].Crear"
                                                            value="false" />
                                                        <label class="custom-control-label"
                                                            for="crear_@row["modulo"]">Crear</label>
                                                    </div>
                                                </div>
                                            }

                                            @* Editar *@

                                            @if (row["modulo"].ToString() == "usuarios"
                                            || row["modulo"].ToString() == "roles-permisos")
                                            {
                                                <div class="custom-switch-wrapper">
                                                    <div class="custom-control custom-switch">
                                                        <input type="checkbox" class="custom-control-input"
                                                            id="editar_@row["modulo"]" name="permisos[@row["modulo"]].Editar"
                                                            value="true" @(Convert.ToBoolean(row["editar"]) ? "checked" : "") />
                                                        <input type="hidden" name="permisos[@row["modulo"]].Editar"
                                                            value="false" />
                                                        <label class="custom-control-label"
                                                            for="editar_@row["modulo"]">Editar</label>
                                                    </div>
                                                </div>
                                            }

                                            @* Eliminar *@

                                            @if (row["modulo"].ToString() == "usuarios"
                                            || row["modulo"].ToString() == "roles-permisos")
                                            {
                                                <div class="custom-switch-wrapper">
                                                    <div class="custom-control custom-switch">
                                                        <input type="checkbox" class="custom-control-input"
                                                            id="eliminar_@row["modulo"]"
                                                            name="permisos[@row["modulo"]].Eliminar" value="true"
                                                            @(Convert.ToBoolean(row["eliminar"]) ? "checked" : "") />
                                                        <input type="hidden" name="permisos[@row["modulo"]].Eliminar"
                                                            value="false" />
                                                        <label class="custom-control-label"
                                                            for="eliminar_@row["modulo"]">Eliminar</label>
                                                    </div>
                                                </div>
                                            }

                                            @* Restaurar *@

                                            @if (row["modulo"].ToString() == "usuarios")
                                            {
                                                <div class="custom-switch-wrapper">
                                                    <div class="custom-control custom-switch">
                                                        <input type="checkbox" class="custom-control-input"
                                                            id="restaurar_@row["modulo"]"
                                                            name="permisos[@row["modulo"]].Restaurar" value="true"
                                                            @(Convert.ToBoolean(row["restaurar"]) ? "checked" : "") />
                                                        <input type="hidden" name="permisos[@row["modulo"]].Restaurar"
                                                            value="false" />
                                                        <label class="custom-control-label"
                                                            for="restaurar_@row["modulo"]">Restaurar</label>
                                                    </div>
                                                </div>
                                            }

                                            @* Activar/Desactivar *@
                                            
                                            @if (row["modulo"].ToString() == "usuarios")
                                            {
                                                <div class="custom-switch-wrapper">
                                                    <div class="custom-control custom-switch">
                                                        <input type="checkbox" class="custom-control-input"
                                                            id="activar_desactivar_@row["modulo"]"
                                                            name="permisos[@row["modulo"]].Activar_Desactivar" value="true"
                                                            @(Convert.ToBoolean(row["activar_desactivar"]) ? "checked" : "") />
                                                        <input type="hidden" name="permisos[@row["modulo"]].Activar_Desactivar"
                                                            value="false" />
                                                        <label class="custom-control-label"
                                                            for="activar_desactivar_@row["modulo"]">Activar/Desactivar</label>
                                                    </div>
                                                </div>
                                            }

                                            @* Cambiar contraseña *@
                                            
                                            @if (row["modulo"].ToString() == "usuarios")
                                            {
                                                <div class="custom-switch-wrapper">
                                                    <div class="custom-control custom-switch">
                                                        <input type="checkbox" class="custom-control-input"
                                                            id="cambiar_password_@row["modulo"]"
                                                            name="permisos[@row["modulo"]].Cambiar_Password" value="true"
                                                            @(Convert.ToBoolean(row["cambiar_password"]) ? "checked" : "") />
                                                        <input type="hidden" name="permisos[@row["modulo"]].Cambiar_Password"
                                                            value="false" />
                                                        <label class="custom-control-label"
                                                            for="cambiar_password_@row["modulo"]">Cambiar contraseña</label>
                                                    </div>
                                                </div>
                                            }

                                            @* Migrar Rol *@
                                            
                                            @if (row["modulo"].ToString() == "usuarios")
                                            {
                                                <div class="custom-switch-wrapper">
                                                    <div class="custom-control custom-switch">
                                                        <input type="checkbox" class="custom-control-input"
                                                            id="migrar_rol_@row["modulo"]"
                                                            name="permisos[@row["modulo"]].Migrar_Rol" value="true"
                                                            @(Convert.ToBoolean(row["migrar_rol"]) ? "checked" : "") />
                                                        <input type="hidden" name="permisos[@row["modulo"]].Migrar_Rol"
                                                            value="false" />
                                                        <label class="custom-control-label"
                                                            for="migrar_rol_@row["modulo"]">Migrar Rol</label>
                                                    </div>
                                                </div>
                                            }
                                            
                                        </div>
                                    </td>
                                </tr>
                                <input type="hidden" name="permisos[@row["modulo"]].Id" value="@row["id"]" />
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>MÓDULO</th>
                                <th>ACCESO</th>
                                <th>PERMISOS</th>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="card-footer">
                        <button type="submit" class="btn btn-info">Salvar Cambios</button>
                    </div>
                </form>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
</div>

