@model System.Data.DataTable
@{
    ViewData["SubTitle"] = "Roles";
    Layout = "_Layout";
}
@{
    var usuario = AuthService.GetCurrentUser(Context);
    var permisos = AuthService.GetCurrentPermissions(Context);
}
@if (permisos["roles-permisos"]["acceso"] == false)
{
    <script>
        window.location.href = '@Url.Action("Index", "Dashboard")';
    </script>
    <noscript>
        <meta http-equiv="refresh" content="0; url='@Url.Action("Index", "Dashboard")'" />
    </noscript>
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <div class="content">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0 text-dark">
                            Roles 
                            @if (permisos["roles-permisos"]["crear"] == true){
                                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#modal-success" >
                                    <i class="fas fa-plus"></i>
                                </button>
                            }
                        </h1>
                    </div>
                    @if (permisos["usuarios"]["acceso"] == true){
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Users")">Aquí</a></li>
                                <li class="breadcrumb-item active">Gestionar usuarios</li>
                            </ol>
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- /.content-header -->

        <div class="card">
            @* <div class="card-header">
            <h3 class="card-title">TÍTULO DE CARD</h3>
        </div> *@
            <!-- /.card-header -->
            <div class="card-body">
                <style>
                    .table-small-font td {
                        font-size: 12px;
                    }
                    .table-small-font th {
                        font-size: 12px;
                    }
                </style>
                <table id="RolesTable"
                    class="table table-striped table-bordered table-condensed table-hover table-small-font">
                    <thead>
                        <tr>
                            @* <th>ID</th> *@
                            <th>NOMBRE</th>
                            <th>DESCRIPCIÓN</th>
                            <th>ACCIONES</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (System.Data.DataRow row in ViewBag.Roles.Rows)
                        {
                        <tr>
                            @* <td>@row["id"]</td> *@
                            <td>@row["nombre"]</td>
                            <td>@row["descripcion"]</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    @if (permisos["roles-permisos"]["editar"] == true){
                                        
                                        <a href="@Url.Action("PermissionsRole", "Permissions", new { id = row["Id"] })" class="btn btn-info"><i class="fa fa-list-alt"></i></a>
                                    
                                        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#modal-warning" 
                                            onclick="document.getElementById('roleEdit').value = '@row["id"]'; 
                                                    document.getElementById('rol').value = '@row["nombre"]';">
                                            <i class="fas fa-pen"></i>
                                        </button>
                                    }
                                    @if (permisos["roles-permisos"]["eliminar"] == true){
                                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#modal-danger" 
                                            onclick="document.getElementById('roleId').value = '@row["id"]'">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            @* <th>ID</th> *@
                            <th>NOMBRE</th>
                            <th>DESCRIPCIÓN</th>
                            <th>ACCIONES</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
</div>

<!-- Modals -->

<partial name="Partials/Modal-EditRole" model="ViewBag.RoleModel"  />
<partial name="Partials/Modal-CreateRole" model="ViewBag.RoleModel"  />
<partial name="Partials/Modal-DeleteRole" model="ViewBag.RoleModel"  />

